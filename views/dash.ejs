    <title>dashboard</title>
</head>

<body>
    <div class="container">
        <div>
            <div id="top-bar">
                <label>Welcome! <label id="greet"></label></label>
                <div id="navlist">
                    <a id="items" href="#">Home</a>
                    <a id="items" href="#">About</a>
                    <a id="items" href="#">Help</a>
                    <a id="items" href="/create">Add job</a>
                </div>
                <img src="img/logout.png" id="logout"></button>
            </div>
        </div>
        <div class="display">
            <div id="current-job">
                <h2>Current Job</h2>
                <div id="cujs" class="job-list horizontal-scroll">
                    <!-- fill template here -->
                </div>
            </div>
        </div> 
        <div class="display">
            <div id="open-job">
                <h2>Open Job</h2>
                <div id="ojs" class="job-list horizontal-scroll">
                    <!-- fill template here -->
                </div>
            </div>
        </div> 
        <div class="display">
            <div id="closed-job">
                <h2>Closed Jobs</h2>
                <div id="cjs" class="job-list horizontal-scroll">
                    <!-- fill template here -->
                </div>
            </div>
        </div>  
        <div class="display">
            <div id="previous-job">
                <h2>Previous Jobs</h2>
                <div id="pjs" class="job-list horizontal-scroll">
                    <!-- fill template here -->
                </div>
            </div>
        </div>  
    </div>
    <!-- templates (donot use these classnames anywhere) -->
    <div class="job-card"> 
        <div style="font-size: larger;"><b><u>Company Name:</u></b></div>
        <div class="company"></div>
        <div style="font-size: larger;"><b><u>Job ID</u></b></div>
        <div class="dbid"></div>
        <div style="font-size: larger;"><b><u>Date created</u></b></div>
        <div class="date"></div>
        <div style="font-size: larger;"><b><u>Position</u></b></div>
        <div class="position"></div>
    </div>
    <!-- templates end -->
    <script src="dashboard.js" type="text/javascript"></script>
